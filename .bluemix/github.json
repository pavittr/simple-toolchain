{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Github link",
    "description": "Github link schema",
    "longDescription": "Store your source code in a new or existing repository on GitHub.com and engage in social coding through wikis, issue tracking, and pull requests.",
    "type": "object",
    "properties": {
      "repo_url": {
          "type": "string"
      },
      "repo_type": {
        "type": "string",
        "value": "Existing"
      }
    },
    "form": [
      {
        "description": "Repository Type",
        "type": "string",
        "key": "repo_type",
        "readonly": "true"
       }, {
        "type": "label",
        "title": "Link to the repository that is specified in the Source repository URL field."
      }, {
      "description": "Source repository URL",
      "type": "string",
      "key": "repo_url",
      "readonly": "true"
     }
    ]
}